<ul class="pure-paginator">
	{% if pagination.prev %}
		<li><a href="{{ pagination.prev.link }}" class="pure-button prev {{ pagination.prev.link|length ? '' : 'invisible' }}">&#171;</a></li>
	{% endif %}

	{% for page in pagination.pages %}
		<li>
			{% if page.link %}
				<a href="{{ page.link }}" class="pure-button {{ page.class }}">{{ page.title }}</a>
			{% else %}
				<a href="#" class="pure-button pure-button-active {{ page.class }}">{{ page.title }}</a>
			{% endif %}
		</li>
	{% endfor %}

	{% if pagination.next %}
		<li><a href="{{ pagination.next.link }}" class="pure-button next {{ pagination.next.link|length ? '' : 'invisible' }}">&#187;</a></li>
	{% endif %}
</ul>
