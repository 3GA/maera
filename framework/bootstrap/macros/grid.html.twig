{#
	Open container.
#}
{% macro open_container(element, id, extra_classes, properties) %}
	<{{ element|default('div') }} class="{{ 'container'|apply_filters( 'shoestrap/container_class' ) }}{{ extra_classes ? ' '~extra_classes : '' }}"{{ id ? ' id="'~id~'"' : '' }}{{ properties ? ' '~properties : '' }}>
{% endmacro %}


{#
	Close container.
#}
{% macro close_container(element) %}
	</{{ element|default('div') }}>
{% endmacro %}


{#
	Open row.
#}
{% macro open_row(element, id, extra_classes, properties) %}
	<{{ element|default('div') }} class="row{{ extra_classes ? ' '~extra_classes : '' }}"{{ id ? ' id="'~id~'"' : '' }}{{ properties ? ' '~properties : '' }}>
{% endmacro %}


{#
	Close row
#}
{% macro close_row(element) %}
	</{{ element|default('div') }}>
{% endmacro %}


{#
	Open column
#}
{% macro open_col(element, sizes, id, extra_classes, properties) %}
	<{{ element|default('div') }} class="{{ column_classes( #{ sizes } ) }}{{ extra_classes ? ' '~extra_classes : '' }}"{{ id ? ' id="'~id~'"' : '' }}{{ properties ? ' '~properties : '' }}>
{% endmacro %}


{#
	Close column
#}
{% macro close_col(element) %}
	</{{ element|default('div') }}>
{% endmacro %}


{#
	Calculate column classes
#}
{% macro column_classes(sizes) %}
	{% if sizes is iterable %}
		{% for size in sizes %}
			{% if size.mobile not null %} col-xs-{{ size.mobile }} {% endif %}
			{% if size.tablet not null %} col-sm-{{ size.mobile }} {% endif %}
			{% if size.medium not null %} col-md-{{ size.mobile }} {% endif %}
			{% if size.large not null %} col-lg-{{ size.mobile }} {% endif %}
		{% endfor %}
	{% endif %}
{% endmacro %}
