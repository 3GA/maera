{% macro column_classes(sizes) %}
	{% if sizes is iterable %}
		{% for size in sizes %}
			{% if size.mobile not null %} col-xs-{{ size.mobile }} {% endif %}
			{% if size.tablet not null %} col-sm-{{ size.mobile }} {% endif %}
			{% if size.medium not null %} col-md-{{ size.mobile }} {% endif %}
			{% if size.large not null %} col-lg-{{ size.mobile }} {% endif %}
		{% endfor %}
	{% endif %}
{% endmacro %}


{% macro float_class(alignment) %}
	pull-{{ alignment }}
{% endmacro %}


