{% macro open_container(element, id, extra_classes, properties) %}
	{# If we've set an ID, then create the ID segment of our macro. #}
	{% if id is not null %}
		{% set id_segment = " id=#{ id }" %}
	{% endif %}

	{# If we've set any extra classes, just add a space in front of them. #}
	{% if extra_classes is not null %}
		{% set extras = " { extra_classes }" %}
	{% endif %}

	{# If we've set any properties, just add a space in front of it. #}
	{% if properties is not null %}
		{% set extras = " { props }" %}
	{% endif %}

	<{{ element|default('div') }} class="{{ 'container' | apply_filters( 'shoestrap/container_class' ) }}{{ extras }}"{{ props }}>
{% endmacro %}


{% macro close_container(element) %}
	</{{ element|default('div') }}>
{% endmacro %}


