{% import 'grid_classes.html.twig' as grid %}
{% macro column_classes(sizes) %}
	{% if sizes is iterable %}
		{% for size in sizes %}
			{% if size.mobile %}{{ grid.column() }}-xs-{{ size.mobile }}{% endif %}
			{% if size.tablet %}{{ grid.column() }}-sm-{{ size.tablet }}{% endif %}
			{% if size.medium %}{{ grid.column() }}-md-{{ size.medium }}{% endif %}
			{% if size.large %}{{ grid.column() }}-lg-{{ size.large }}{% endif %}
		{% endfor %}
	{% endif %}
{% endmacro %}
