<div id="bbpress-forums">

	{{ function('bbp_breadcrumb') }}

	{{ function('bbp_set_query_name','bbp_get_search_rewrite_id') }}

	{% do action('bbp_template_before_search') %}

	{% if function('bbp_has_search_results') %}
		{{ function('bbp_get_template_part', 'pagination', 'search') }}
		{{ function('bbp_get_template_part', 'loop', 'search') }}
		{{ function('bbp_get_template_part', 'pagination', 'search') }}
	{% elseif function('bbp_get_search_terms') %}
		{{ function('bbp_get_template_part', 'feedback', 'no-search') }}
	{% else %}
		{{ function('bbp_get_template_part', 'form', 'search') }}
	{% endif %}

	{% do action('bbp_template_after_search_results') %}

</div>