{#<?php#}
<article {{ function( 'post_class' ) }} id="tease-{{ post.ID }}" itemscope itemtype="http://schema.org/Article">

	{% block content %}

		{{ post.top }}

		{% include 'parts/tease-title.twig' %}

			<p class="post-meta">
				<span itemprop="datePublished">{{ post.date }}</span>
				{{ __( 'under', 'maera' ) }}
				{% for category in post.get_categories %}
					<a href="{{ category.get_path }}" itemprop="articleSection">{{ category.name }}</a>
				{% endfor %}
				{{ __( 'by', 'maera' ) }}
				<a href="{{ post.author.link }}" itemprop="author">{{ post.author.name }}</a>
				{% if post.comments %}
					{{ __( 'with', 'maera' ) }}
					<a href="{{ post.link }}#comments">{{ post.comment_count }} {{ __( 'comments', 'maera' ) }}</a>
				{% endif %}
			</p>

		<div class="entry-summary" itemprop="description">
			{{ post.teaser }}
			{{ shell.clearfix }}
		</div>

		<footer class="entry-footer">
			{{ post.footer }}
		</footer>

	{% endblock %}
</article>
