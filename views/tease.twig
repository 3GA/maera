{#<?php#}
<article {{ function( 'post_class' ) }} id="tease-{{ post.ID }}">

	{% block content %}

		{{ post.top }}

		{% include 'parts/tease-title.twig' %}

        <p class="post-meta">
        	{{ post.date }}
        	{{ __( 'under', 'maera' ) }}
        	{% for category in post.get_categories %}
        		<a href="{{ category.get_path }}">{{ category.name }}</a>
        	{% endfor %}
        	{{ __( 'by', 'maera' ) }}
        	<a href="{{ post.author.link }}">{{ post.author.name }}</a>
        	{% if post.comments %}
        		{{ __( 'with', 'maera' ) }}
        		<a href="{{ post.link }}#comments">{{ post.comment_count }} {{ __( 'comments', 'maera' ) }}</a>
        	{% endif %}
        </p>

		<div class="entry-summary">
			{{ post.teaser }}
			{{ shell.clearfix }}
		</div>

		<footer class="entry-footer">
			{{ post.footer }}
		</footer>

	{% endblock %}
</article>
