{#<?php#}
{% extends "base.twig" %}

{% block content %}

	<div class="content-wrapper">

		<article {{ function( 'post_class' ) }} id="post-{{post.ID}}">

			{% do action( 'shoestrap/single/top' ) %}

			{% include 'parts/single-title.twig' %}

			{% do action( 'shoestrap/entry/meta' ) %}

			{% if singular.image.switch == 1 %}
				<img src="{{ post.get_thumbnail.get_src|resize( singular.image.width, singular.image.height ) }}">
			{% endif %}

			<div class="entry-content">

				{% do action( 'shoestrap/single/pre_content' ) %}
				{{ post.content }}
				{{ framework.clearfix }}
				{{ function( 'wp_link_pages', {
					'before': '<div class="page-links">' . __( 'Pages:', 'shoestrap' ),
					'after': '</div>'
				}) }}
				{{ framework.clearfix }}
				{% do action( 'shoestrap/single/after_content' ) %}
			</div>

			<footer></footer>

			{% include 'comments.twig' %}

		</article>

	</div><!-- /content-wrapper -->

{% endblock %}
