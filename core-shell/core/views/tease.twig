{#<?php#}
<section {{ function( 'post_class', 'post' ) }}>
    <header class="post-header">
    	{% do action( 'maera/teaser/start', post.ID ) %}
        <h2 class="post-title"><a href="{{ post.link }}">{{ post.title|apply_filters( 'maera/title' ) }}</a></h2>

        <p class="post-meta">
        	{{ post.date }}
        	{{ __( 'under', 'maera' ) }}
        	{% for category in post.get_categories %}
        		<a href="{{ category.get_path }}">{{ category.name }}</a>
        	{% endfor %}
        	{{ __( 'by', 'maera' ) }}
        	<a href="{{ post.author.link }}">{{ post.author.name }}</a>
        	{% if post.comments %}
        		{{ __( 'with', 'maera' ) }}
        		<a href="{{ post.link }}#comments">{{ post.comment_count }} {{ __( 'comments', 'maera' ) }}</a>
        	{% endif %}
        </p>
    </header>

    <div class="post-description">{{ post.teaser }}</div>
    <hr>
</section>
